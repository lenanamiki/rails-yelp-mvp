<div class="container">
  <div class="my-0 mx-auto">
    <h1>All Restaurants</h1>
  </div>

  <div class="card" style="width: 18rem;">
    <% @restaurants.each do |restaurant| %>
    <%= image_tag "https://source.unsplash.com/200x200/?food" %>
    <div class="card-body">
      <h5 class="card-title"><%= restaurant.name %><em>(<%= restaurant.category %>)</em></h5>
      <p class="card-text"><%= restaurant.address%></p>
      <% if restaurant.phone_number.nil? %>
        <p class="card-text">No phone number</p>
      <% else %>
        <p class="card-text"><%= restaurant.phone_number%></p>
      <% end %>
    </div>
    <div class="card-body d-flex justify-content-around">
      <%= link_to restaurant_path(restaurant) do%>
      <p class="mx-2 mb-0"><i class="fas fa-info-circle"></i>See Details</p>
      <% end %>
      <%= link_to new_restaurant_path do %>
      <p class="mx-2 mb-0"><i class="fas fa-edit"></i>Add a Review</p>
      <% end %>
    </div>
    <% end %>
  </div>

</div>
